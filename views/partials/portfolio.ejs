<% if(data.portfolio) { %>
  <section id="portfolio" class="portfolio">
    <h3 class="heading">Portfolio<span class="primary">.</span></h3>
    <div class="grid">
      <% data.portfolio.forEach(project => { %>
        <div class="grid__card">
          <div class="grid__video">
            <iframe width="100%" height="100%" loading="lazy" src=<%= project.video_url %> title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
          </div>
  
          <div class="grid__copy">
            <div>
              <h4 class="grid__title"><%= project.title %></h4>
              <p>
                <span class="diff">Stack used:</span> 
                <%= project.stack %>
              </p>
              <p>
                <span class="diff">Purpose:</span>
                <%= project.purpose %> 
              </p>
              <p>
                <span class="diff">Key features:</span>
                <ul>
                  <% project.features.forEach(feature => { %>
                    <li><%= feature %></li>
                  <% })%>
                </ul>
              </p>
            </div>
            <div>
              <a href=<%= project.live_url %> target="_blank" class="button">View Web App</a>
              <a href=<%= project.github_url %> target="_blank" class="button">Source Code</a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </section>
<% } %>